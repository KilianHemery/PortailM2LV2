extends ../node_modules/pug-bootstrap/_bootstrap

append styles
    // Bootstrap theme
    +bootswatch("paper")
    // Custom styles for this template
    link(href='../stylesheets/theme.css', rel='stylesheet')
        
block body
    // Fixed navbar
    nav.navbar.navbar-inverse
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/')= "Portail M2L"
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Accueil
                    li
                        a(href='/propos') A propos
                    li
                        a(href='/contact') Contact
                    li
                        a(href='/salles') Visualiser
                    li
                        a(href='/reservation') Reserver

                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                            | Informations
                            span.caret
                        ul.dropdown-menu(role='menu')
                            li
                                a(href='/description') Description du site
                            li
                                a(href='/equipement') Equipement en matériel informatique des espaces
                            li
                                a(href='/services') Services proposés
                            li
                                a(href='/reseaux') Réseaux informatiques

                ul.nav.navbar-nav.navbar-right
                    li
                        if (!user)
                            a(href="/users/login") Se connecter
                        else
                            a(href="/users/logout") Se déconnecter
